    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:descendantFocusability="blocksDescendants">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/item_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_iv_head"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/item_iv_head"
            android:text="nick"
            android:textColor="#1296db"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_tv_nickname"
            android:layout_below="@+id/item_tv_nickname"
            android:layout_marginTop="10dp"
            android:text="time"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_time"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="content"
            android:textSize="16sp" />
        <com.example.thomas.cookfriends.widget.NineGridView
            android:id="@+id/gv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_content"
            android:layout_margin="2dp"
            android:horizontalSpacing="0dp"
            android:listSelector="@null"
            android:visibility="gone"
            android:numColumns="3"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0dp" />
    </RelativeLayout>
