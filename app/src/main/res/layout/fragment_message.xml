<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_head_msg"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:text="消息"
                android:textColor="@color/white"
                android:background="@drawable/ic_left_blueshape"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_head_friend"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:text="厨友"
                android:layout_marginLeft="-0.5dp"
                android:textColor="@color/tab_select_color"
                android:background="@drawable/ic_right_whiteshape"
                android:gravity="center"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_head_add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_add"
            />
    </RelativeLayout>
    <com.example.thomas.cookfriends.widget.MyViewPager
        android:id="@+id/mfpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>
